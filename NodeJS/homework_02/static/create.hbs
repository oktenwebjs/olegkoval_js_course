<div class="container w-50">
    {{#if errorMsg}}
        <div class="alert alert-danger" role="alert">
            {{errorMsg}}
        </div>
    {{/if}}
    <form action="/users/create" method="POST">
        <div class="form-group">
            <label for="name">Full Name:</label>
            <input id="name" name="name" type="text" placeholder="User full name" class="form-control" {{#if userData.name}}value="{{userData.name}}"{{/if}} required/>
        </div>
        <div class="form-group">
            <label for="address">Address:</label>
            <input id="address" name="address" type="text" placeholder="Address" class="form-control" {{#if userData.address}}value="{{userData.address}}"{{/if}} required/>
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input id="email" name="email" type="email" placeholder="User email" class="form-control" {{#if userData.email}}value="{{userData.email}}"{{/if}} required/>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input id="password" name="password" type="password" placeholder="Password" class="form-control" required/>
        </div>
        <button type="submit" class="btn btn-primary">Create account</button>
    </form>
</div>
