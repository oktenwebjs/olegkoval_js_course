<div class="container">
    <h2>Users List</h2>
    <ul class="list-group w-50">
        {{#each users}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{this.name}}
                <span class="badge badge-pill"><a href="/users/{{this.id}}" class="btn" title="View Details">&raquo;</a></span>
            </li>
        {{/each}}
    </ul>
</div>
